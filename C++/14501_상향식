#include <iostream>
#include <map>
#include <vector>
#include <queue>
#include <functional>
#include <string.h>

using namespace std;

pair<int,int> retire[16];
int retireDP[16] = { 0, };
int main()
{  
    int n= 0;
    cin >> n;
 
    for(int i = 1; i <= n; i++){
        cin >> retire[i].first >> retire[i].second;
    }
    
     for (int i = 1; i <=n; i++) {
        if (i + retire[i].first - 1 > n) {
            retireDP[i] = max(retireDP[i], retireDP[i-1]);
            continue;
        }

        for (int j = 0; j < i; j++)
        {
            retireDP[i + retire[i].first - 1] = max(retireDP[i + retire[i].first - 1], retireDP[j] + retire[i].second);
        }
    }
    
    cout << retireDP[n] <<'\n';
    
    return 0;
}
